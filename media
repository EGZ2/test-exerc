algoritmo "media_4_notas"

var
   nota1: inteiro
   nota2: inteiro
   nota3: inteiro
   nota4: inteiro
   soma: inteiro
   media: inteiro

inicio
    escreva("Digite a primeira nota: ")

   leia(nota1)

   escreva("Digite a segunda nota: ")

   leia(nota2)

   escreva("Digite a terceira nota: ")

   leia(nota3)

   escreva("Digite a quarta nota: ")

   leia(nota4)

   soma <- nota1 + nota2 + nota3 + nota4
   media <- soma / 4

   escreval("Soma: ", soma)
   escreval("Media: ", media)

fimalgoritmo
